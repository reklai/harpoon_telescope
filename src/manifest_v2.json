{
  "manifest_version": 2,
  "name": "Harpoon Telescope",
  "version": "2.0.0",
  "description": "Harpoon + Telescope inspired browser extension â€” grep tabs, live preview, vim motions, and anchor up to 4 tabs with scroll memory.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "bookmarks",
    "history",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open-harpoon": {
      "suggested_key": { "default": "Alt+M" },
      "description": "Open Harpoon panel"
    },
    "harpoon-add": {
      "suggested_key": { "default": "Alt+A" },
      "description": "Add current tab to Harpoon"
    },
    "harpoon-tab-1": {
      "suggested_key": { "default": "Alt+1" },
      "description": "Jump to Harpoon slot 1"
    },
    "harpoon-tab-2": {
      "suggested_key": { "default": "Alt+2" },
      "description": "Jump to Harpoon slot 2"
    },
    "harpoon-tab-3": {
      "suggested_key": { "default": "Alt+3" },
      "description": "Jump to Harpoon slot 3"
    },
    "harpoon-tab-4": {
      "suggested_key": { "default": "Alt+4" },
      "description": "Jump to Harpoon slot 4"
    },
    "open-telescope-current": {
      "suggested_key": { "default": "Alt+F" },
      "description": "Search in current tab"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Harpoon Telescope"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  }
}
