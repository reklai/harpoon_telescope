{
  "manifest_version": 3,
  "name": "Harpoon Telescope",
  "version": "2.0.0",
  "description": "Harpoon + Telescope inspired browser extension â€” grep tabs, live preview, vim motions, and anchor up to 6 tabs with scroll memory.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open-harpoon": {
      "suggested_key": { "default": "Alt+M" },
      "description": "Open Harpoon panel"
    },
    "harpoon-add": {
      "suggested_key": { "default": "Alt+A" },
      "description": "Add current tab to Harpoon"
    },
    "open-telescope-current": {
      "suggested_key": { "default": "Alt+F" },
      "description": "Search in current tab"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Harpoon Telescope"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
